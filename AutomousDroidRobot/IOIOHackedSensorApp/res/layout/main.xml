<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:keepScreenOn = "true">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="20px">

	</LinearLayout>

	<ToggleButton
		android:id="@+id/ToggleButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_margin="20px"
		android:textOff="Led is OFF"
		android:textOn="Led is ON"
		/>

	<LinearLayout
	    android:id="@+id/linearLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <TextView
	        android:id="@+id/textViewKp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/kpTextBoxVal"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <EditText
	        android:id="@+id/editTextKp"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal"
	        android:lines="1"
	        android:maxLength="5"
	        android:singleLine="true"
	        android:text="@string/defaultKpVal"
	        android:width="40dip" >

	        <requestFocus />
	    </EditText>

	</LinearLayout>

	<LinearLayout
	    android:id="@+id/linearLayout2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <TextView
	        android:id="@+id/textViewKi"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/kiTextBoxVal"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <EditText
	        android:id="@+id/editTextKi"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal"
	        android:lines="1"
	        android:maxLength="5"
	        android:singleLine="true"
	        android:text="@string/defaultKiVal"
	        android:width="40dip" />
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/linearLayout4"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/kdTextBoxVal"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <EditText
	        android:id="@+id/editTextKd"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal"
	        android:lines="1"
	        android:maxLength="5"
	        android:singleLine="true"
	        android:text="@string/defaultKdVal"
	        android:width="40dip" />
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/linearLayout5"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <TextView
	        android:id="@+id/textViewBeta"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/betaTextBoxVal"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <EditText
	        android:id="@+id/editTextBeta"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal"
	        android:lines="1"
	        android:maxLength="5"
	        android:singleLine="true"
	        android:text="@string/defaultBetaVal"
	        android:width="40dip" />
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/LinearLayout02"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <TextView
	        android:id="@+id/textViewFilter"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/filterTextBoxVal"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <EditText
	        android:id="@+id/editTextFilter"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal"
	        android:lines="1"
	        android:maxLength="5"
	        android:singleLine="true"
	        android:text="@string/defaultFilterVal"
	        android:width="40dip" />
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/LinearLayout01"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <TextView
	        android:id="@+id/textViewWindup"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/windupCoefTextBoxVal"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <EditText
	        android:id="@+id/editTextWindup"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal"
	        android:lines="1"
	        android:maxLength="5"
	        android:singleLine="true"
	        android:text="@string/defaultWindupVal"
	        android:width="40dip" />
	</LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:keepScreenOn="true">

	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/motor1_label" />
	
	<SeekBar
		android:id="@+id/SeekBar"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:max="1000"
		android:progress="500"
		android:isScrollContainer="false"/>

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/motor2_label" />

	<SeekBar
	    android:id="@+id/seekBar1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" android:max="1000" android:longClickable="false" android:progress="500"/>

	<LinearLayout
	    android:id="@+id/linearLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

		<ToggleButton
		    android:id="@+id/ToggleButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="20px"
		    android:textOff="Mot1 is OFF"
		    android:textOn="Mot1 is ON" />

		<ToggleButton
		    android:id="@+id/ToggleButton01"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="20px"
		    android:textOff="Mot2 is OFF"
		    android:textOn="Mot2 is ON" />

	</LinearLayout>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingTop="20px" >

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingRight="5px"
	        android:text="@string/analog_label" />

	    <TextView
	        android:id="@+id/TextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="0" />
	</LinearLayout>

	<ImageView android:layout_height="wrap_content" android:id="@+id/imageView1" android:layout_width="wrap_content" android:src="@drawable/ioio_down"></ImageView>
</LinearLayout>